---
import Layout from "../../layouts/Layout.astro";
import {
	Strip,
	Col,
	Button,
} from "@canonical/react-components";
import DiscourseNoticeBanner from "../../components/DiscourseNoticeBanner.jsx";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export function getStaticPaths() {
	return [{ params: { lang: "en" } }, { params: { lang: "ko" } }];
}
---

<Layout title="UbuCon Korea 2023">
	<Strip type="suru" element="section" includeCol={false}>
		<Col size={8}>
			<h1><b>UbuCon Korea 2023</b></h1>
			<h1>{t("eventMeta.theme")}</h1>
			<h1>{t("eventMeta.date")}</h1>
			<h1>{t("eventMeta.venue")}</h1>
			<Button
				appearance=""
				element={"a"}
				href="https://events.canonical.com/event/32/abstracts"
			>
				{t("eventMeta.callForProposals")}
			</Button>
		</Col>
		<Col size={4}>
			<img src="/logo.svg" alt="Placeholder" />
		</Col>
	</Strip>
	<DiscourseNoticeBanner
		baseUrl="https://discourse.ubuntu-kr.org"
		jsonFeedEndpoint="/c/notice/9.json?order=created"
		topicTag="ubucon-kr-2023"
		language={lang}
		client:only="react"
	/>
	<Strip bordered element="section" includeCol={false}>
		<section class="p-section">
			<div class="p-block">
				<div class="row">
					<hr class="p-rule" />
				</div>
				<div class="row--50-50">
					<div class="col">
						<h2>
							{t("cfp.title")}
						</h2>
					</div>
					<div class="col">
						<p>
							{t("cfp.desc")}
						</p>
						<Button
							appearance=""
							element={"a"}
							href="/cfp"
						>
							{t("cfp.submit")}
						</Button>
					</div>
				</div>
			</div>
			<div class="p-block">
				<div class="row">
					<hr class="p-rule" />
				</div>
				<div class="row--50-50">
					<div class="col">
						<h2>{t("sponsorship.tagline")}</h2>
					</div>
					<div class="col">
						<p>
							{t("sponsorship.desc")}
						</p>
						<Button appearance="" element={"a"} href="sponsor">
							{t("sponsorship.details")}
						</Button>
					</div>
				</div>
			</div>
		</section>
	</Strip>

	<style></style>
</Layout>
